{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "firebaseConfig": ["./src/firebaseConfig.ts"],
      "@/*": ["./src/*"],
      "@auth/*": ["./src/auth/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "types": [
      "react-native",
      "node"
    ],
    "skipLibCheck": true,
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
